.ui.vertical.footer.segment
    .ui.container
        .ui.stackable.four.column.grid.internally.celled

            .column
                %p Kajian Terbaru
                .ui.list
                    - blog.articles[0...5].each do |article|
                        = link_to article.title, article, :class => 'item'

            .column
                %p Tag
                .ui.list
                    - blog.tags.each do |tag, articles|
                        = link_to "#{tag} (#{articles.size})", tag_path(tag), :class => 'item'

            .column
                %p Tahun
                .ui.list
                    - blog.articles.group_by {|a| a.date.year }.each do |year, articles|
                        = link_to "#{year} (#{articles.count})", blog_year_path(year), :class => 'item'

            .column
                .middle.aligned.content
                    %ul
                        %li
                            = link_to 'islampedia.id', 'https://islampedia.id'
                        %li
                            = link_to 'Facebook', 'https://facebook.com/Islampedia-842313962561658'
                        %li
                            = link_to 'Twitter', 'https://twitter.com/islampediadotid'
                        %li
                            = link_to 'Instagram', 'https://www.instagram.com/islampediaid/'

- if @video
    :javascript
        $('.ui.embed').embed()
